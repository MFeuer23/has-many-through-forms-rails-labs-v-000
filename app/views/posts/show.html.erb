<h2>Title: <%= @post.title %></h2>
<p>Content: <%= @post.content %></p>

<br>
<p>Users who have commented on this post:</p>
<ul>
  <% @post.users.uniq.each do |user| %>
    <li><%= user.username %></li>
  <% end %>
</ul>

<%= form_for(@post) do |f|%>
  <%= f.fields_for :comments, @post.comments.build do |comments_fields| %>
    <%= comments_fields.text_field :content %>
  <% end %>
  
  <%= f.collection_select :user_ids, User.all, :id, :username %>
  <%= f.fields_for :user_ids, @post.users.build do |user_fields| %>
    <%= user_fields.text_field :username %>
  <% end %>
  <%= f.submit %>
<% end %>

